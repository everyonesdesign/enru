#! /usr/bin/env python3
import pydoc

import click

from enru.enru import Enru
from enru.adapters.yandex import YandexAdapter


@click.command()
@click.argument('word')
@click.option('--short', '-s',
              is_flag=True,
              default=False,
              help='Show results in short form')
def main(word, short):
    """Simple dictionaries translation parser"""
    parser = YandexAdapter(short_mode=short)
    enru = Enru(parser)
    content = enru.run(word)
    pydoc.pipepager(content, cmd='less -R')

if __name__ == "__main__":
    main()
