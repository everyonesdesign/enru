#! /usr/bin/env python3
import pydoc

import click

from enru.enru import Enru
from enru.parsers.yandex import YandexParser


@click.command()
@click.argument('word')
@click.option('--show-examples', '-e',
              is_flag=True,
              default=False,
              help='Show word usage examples')
def main(word, show_examples):
    """Simple dictionaries translation parser"""
    parser = YandexParser()
    enru = Enru(parser)
    content = enru.run(word, show_examples)
    pydoc.pipepager(content, cmd='less -R')

if __name__ == "__main__":
    main()
